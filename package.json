{
  "name": "@skybrush/live",
  "version": "2.12.1",
  "description": "Ground control station of a Botlab drone swarm",
  "main": "electron/main.js",
  "private": true,
  "license": "GPL-3.0-or-later",
  "author": {
    "name": "Botlab Dynamics",
    "email": "support@botlabdynamics.com"
  },

  "scripts": {
    "bundle": "rimraf build && cross-env NODE_ENV=production webpack --mode=production --progress --config webpack/dist.config.js",
    "lint": "eslint",
    "postinstall": "patch-package",
    "start": "rimraf build && webpack serve --config webpack/browser.config.js --progress",
    "start:electron": "webpack serve --server-type https --config webpack/electron.config.js --progress",
    "start:electron:light": "cross-env SKYBRUSH_VARIANT=light webpack serve --server-type https --config webpack/electron.config.js --progress",
    "start:https": "rimraf build && webpack serve --server-type https --config webpack/browser.config.js --progress",
    "stats": "rimraf build && webpack --json --progress --config webpack/dist.config.js >stats.json",
    "stats:prod": "rimraf build && cross-env NODE_ENV=production webpack --json --mode=production --progress --config webpack/dist.config.js >stats.prod.json",
    "test": "jest"
  },

  "build": {
    "appId": "com.collmot.botlab.live",
    "productName": "Botlab Live",

    "artifactName": "botlab-live-${version}.${ext}",

    "directories": {
      "buildResources": "assets"
    },

    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json"
    ],

    "icon": "assets/icons/icon.ico",

    "linux": {
      "category": "Utility",
      "executableName": "botlab-live",
      "maintainer": "Botlab Dynamics <support@botlabdynamics.com>",
      "vendor": "Botlab Dynamics",
      "target": [
        { "target": "AppImage", "arch": ["x64"] },
        { "target": "deb", "arch": ["x64"] }
      ]
    },

    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/icon.ico"
    }
  },

  "dependencies": {
    "@collmot/layout-bmfont-text": "^1.3.5",
    "@collmot/ol-react": "^5.1.0",
    "@collmot/react-socket": "^2.0.1",
    "@date-io/core": "^1.3.13",
    "@date-io/date-fns": "^1.3.13",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource/fira-sans": "^5.2.5",
    "@fvilers/disable-react-devtools": "^1.3.0",
    "@loadable/component": "^5.16.4",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@mui/x-date-pickers": "~8.11.3",
    "@react-spring/web": "^10.0.3",
    "@reduxjs/toolkit": "^2.9.0",
    "@rjsf/core": "^6.0.1",
    "@rjsf/mui": "^6.0.1",
    "@rjsf/utils": "^6.0.1",
    "@rjsf/validator-ajv8": "^6.0.1",
    "@skybrush/aframe-components": "^2.0.0",
    "@skybrush/app-theme-mui": "^4.0.1",
    "@skybrush/electron-app-framework": "^3.0.0",
    "@skybrush/flockwave-spec": "^2.5.0",
    "@skybrush/mui-components": "^5.0.1",
    "@skybrush/show-format": "^3.4.0",
    "@turf/boolean-contains": "^7.3.1",
    "@turf/helpers": "^7.3.1",
    "aframe": "^1.7.1",
    "buffer": "^6.0.3",
    "chart.js": "^4.5.1",
    "date-fns": "^2.30.0",
    "final-form": "^5.0.0",
    "final-form-calculate": "^2.0.0",
    "golden-layout": "^1.5.9",
    "http-headers": "^3.0.2",
    "i18next": "^23.10.0",
    "interweave": "^13.1.1",
    "less": "^4.5.1",
    "less-loader": "^12.3.0",
    "ol": "^10.7.0",
    "ol-ext": "^4.0.37",
    "ol-mapbox-style": "^13.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^6.0.2",
    "react-final-form": "^7.0.0",
    "react-redux": "^7.2.9",
    "redux": "^4.2.1",
    "redux-saga": "^1.4.2",
    "stream-browserify": "^3.0.0",
    "three": "^0.150.1"
  },

  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.1",
    "babel-loader": "^10.0.0",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.2",
    "dotenv-webpack": "^8.1.1",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.3",
    "rimraf": "^6.0.1",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  }
}
