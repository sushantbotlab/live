{
  "name": "@skybrush/live",
  "version": "2.12.1",
  "description": "Ground control station of a Botlab drone swarm",
  "main": "electron/main.js",
  "private": true,
  "license": "GPL-3.0-or-later",
  "author": {
    "name": "Botlab Dynamics",
    "email": "support@botlabdynamics.com"
  },
  "scripts": {
    "bundle": "rimraf build && cross-env NODE_ENV=production webpack --mode=production --config webpack/dist.config.js",
    "start:electron": "webpack serve --config webpack/electron.config.js"
  },
  "build": {
    "appId": "com.collmot.botlab.live",
    "productName": "Botlab Live",
    "artifactName": "botlab-live-${version}-${os}.${ext}",
    "directories": {
      "buildResources": "assets-empty"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "process": "^0.11.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "babel-loader": "^10.0.0",
    "babel-plugin-i18next-extract": "^1.1.0",
    "core-js": "^3.47.0",
    "cross-env": "^10.1.0",
    "crypto-browserify": "^3.12.1",
    "dotenv-webpack": "^8.1.1",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "git-revision-webpack-plugin": "^5.0.0",
    "html-webpack-plugin": "^5.6.5",
    "https-browserify": "^1.0.0",
    "os-browserify": "^0.3.0",
    "react-refresh": "^0.18.0",
    "rimraf": "^6.0.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "vm-browserify": "^1.1.2",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "worker-url": "^1.1.0"
  }
}
